<div class="max-w-3xl mx-auto mt-12 p-6 bg-white border border-gray-200 rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Article Summary</h1>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-700 mb-2">Original URL</h2>
    <%= link_to @article.url, @article.url, target: "_blank", class: "text-blue-600 hover:underline break-all" %>
  </div>

  <div>
    <h2 class="text-xl font-semibold text-gray-700 mb-2">Summary</h2>
    <p class="text-lg text-gray-800 leading-relaxed"><%= @article.summary %></p>
  </div>

  <%= link_to "Summarize another article", root_path, class: "mt-8 inline-block px-6 py-3 text-lg font-semibold text-white bg-blue-600 rounded-lg shadow-md hover:bg-blue-700 focus:outline-none" %>
</div>
