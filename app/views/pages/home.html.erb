<div class="animated-fade-in">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-4">Summarize Any Article with AI</h1>
    <p class="text-lg text-center text-gray-600 mb-8">Paste the URL of an article, and our AI will provide a concise summary.</p>

    <%= form_with url: "/articles", method: :post, local: true, class: "flex items-center justify-center" do |form| %>
      <%= form.text_field :url, class: "w-full md:w-1/2 px-4 py-3 rounded-l-lg border-t mr-0 border-b border-l text-gray-800 border-gray-200 bg-white", placeholder: "Enter article URL..." %>
      <%= form.submit "Summarize", class: "px-8 rounded-r-lg bg-blue-500 text-white font-bold p-4 uppercase border-blue-500 border-t border-b border-r cursor-pointer hover:bg-blue-400" %>
    <% end %>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Recent Summaries</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Example of a summarized article card -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Article Title</h3>
        <p class="text-gray-600">This is a brief summary of the article...</p>
      </div>
    </div>
  </div>
</div>
